<h1>商品更新フォーム</h1>
<%= form_for @item, url: { action: :update } do |f| %>
  <p>
    商品名:<br>
    <%= f.text_field :name %>
  </p>
  <p>
    商品詳細:<br>
    <%= f.text_area :description %>
  </p>
  <p>
    価格:<br>
    <%= f.number_field :price %>
  </p>
  <p>
    送り主ID:<br>
    <%= f.number_field :seller_id %>
  </p>
  <p>
    電子メール:<br>
    <%= f.text_field :email %>
  </p>
  <p>
    商品画像URL:<br>
    <%= f.text_field :image_url %>
  </p>
  <%= f.submit "更新" %>
<% end %>
